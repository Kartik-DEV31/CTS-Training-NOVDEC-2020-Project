		return result;

	}*/

	@Override
	public void updateRestaurant() {
		// TODO Auto-generated method stub

	}

	@Override
	public void deleteRestaurant() {
		// TODO Auto-generated method stub

	}

	@Override
	public Optional<RestaurantDetails> getRestaurant() {
		// TODO Auto-generated method stub
		return null;
	}

}
